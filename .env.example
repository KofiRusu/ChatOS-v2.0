# =============================================================================
# ChatOS Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and configure as needed
# cp .env.example .env
# =============================================================================

# Server Configuration
CHATOS_ENV=development
HOST=0.0.0.0
PORT=8000

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mistral:7b
PERSRM_MODEL=ft-qwen25-v1-quality

# PersRM Configuration
PERSRM_API_URL=http://localhost:8080
PERSRM_ENABLED=true

# Training Configuration
TRAINING_DATA_DIR=data/persrm
MODEL_CHECKPOINT_DIR=models/persrm-continuous

# Trading Configuration
DEFAULT_RISK_PER_TRADE=1.0
MAX_POSITION_SIZE=10.0
DEFAULT_STOP_LOSS=2.0
DEFAULT_TAKE_PROFIT=6.0

# Logging
LOG_LEVEL=INFO
